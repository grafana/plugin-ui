{
  "extends": "@grafana/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,

    "module": "Preserve",
    "outDir": "dist",
    "sourceMap": true,

    "noEmit": true
  },
  "include": ["src"]
}
